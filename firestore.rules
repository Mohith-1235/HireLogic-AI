
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can create, read, and update their own user document.
    // They cannot delete it or see other users' documents.
    match /users/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    // Allow logged-in administrators to read contact messages.
    // This is a placeholder; you would define 'isAdmin' in a real app.
    match /contactMessages/{contactMessageId} {
      allow read: if request.auth != null; // Simplified for now
      allow write: if true; // Allow public to write contact messages
    }
  }
}
