rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Users can create their own document
      allow create: if request.auth != null && request.auth.uid == userId;
      // Users can read and update their own document
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Users cannot delete their own document
      allow delete: if false;
    }
    match /contactMessages/{contactMessageId} {
      // Anyone can create a contact message
      allow create: if true;
      // Only admins should be able to read/list/delete, but for now, deny all reads and deletes.
      allow read, update, delete: if false;
    }
  }
}
