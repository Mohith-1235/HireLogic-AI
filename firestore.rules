rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Contact messages can be created by anyone.
    match /contactMessages/{messageId} {
      allow create: if true;
      // Only admins should be able to read/list/delete messages.
      // This would require an admin claim in custom auth tokens.
      allow read, list, delete: if false; // Secure by default
    }
  }
}