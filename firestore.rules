rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read and update their own profile, but cannot delete it.
    // They cannot access other users' documents.
    match /users/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    // Contact messages can be created by anyone.
    // Reading and deleting should be restricted to admin roles (not implemented here).
    match /contactMessages/{messageId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
  }
}
