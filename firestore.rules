rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read, create and update their own document.
    // They cannot delete their own document or access other users' documents.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Contact messages can be created by anyone.
    // Reading/deleting should be restricted to an admin role in a real app.
    match /contactMessages/{contactMessageId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false; // Restricted for now
    }
  }
}
