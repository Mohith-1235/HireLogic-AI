
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // A user can create their own profile document.
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // A user can read and update their own profile document.
      allow read, update: if request.auth != null && request.auth.uid == userId;
      
      // Users cannot delete their own accounts through the client.
      allow delete: if false;
    }
    match /contactMessages/{contactMessageId} {
      // Anyone can submit a contact message.
      allow create: if true;
      
      // Only admins should be able to read/write/delete contact messages.
      // This is a placeholder; you would define 'isAdmin' logic here.
      allow read, write, delete: if false;
    }
  }
}
