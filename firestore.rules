rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read, create, and update their own data.
    match /users/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Explicitly disallow deletion of user documents.
    }

    // Contact messages can be created by anyone, but should only be readable
    // by authenticated administrators (rules for that would be added here).
    match /contactMessages/{messageId} {
      allow create: if true;
      allow read, update, delete: if false; // Protect from public access
    }
  }
}
