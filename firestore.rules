rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write to their own data.
    match /users/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Disallow deleting user documents.
    }

    // Contact messages can be created by anyone.
    // Reading/listing should be restricted to admin roles in a real app.
    match /contactMessages/{messageId} {
      allow create: if true;
      allow read, list, update, delete: if false; // Lock down for now.
    }
  }
}
