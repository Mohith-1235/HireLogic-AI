rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Users can read, create, and update their own document
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
    }

    match /contactMessages/{messageId} {
      // Anyone can create a contact message
      allow create: if true;
      // Only authenticated users (e.g., admins you might define later) can read/list them.
      // For now, we'll restrict reads to prevent public access.
      allow read, list, update, delete: if false; 
    }
  }
}
